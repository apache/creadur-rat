<!--        <file file="${ant.file}"/>-->
<!--      </stylesheet>-->
<!--      <file file="${ant.file}"/>-->
<!--    </rat:report>-->
<!--    <au:assertLogContains text="Ignoring stylesheet"/>-->
<!--  </target>-->

  <target name="testLicenseRequiresFamilyName">
    <au:expectfailure
        expectedMessage="License family YASL1 not found">
      <rat:report>
        <file file="${ant.file}"/>
        <rat:license
            family="YASL1"
            notes="Interesting License">
          <rat:text>exmpl</rat:text>
        </rat:license>
      </rat:report>
    </au:expectfailure>
  </target>

  <target name="testLicenseRequiresFamilyCategory">
    <au:expectfailure
        expectedMessage="LicenseFamily Category must be specified">
      <rat:report>
        <file file="${ant.file}"/>
        <rat:license
            notes="Interesting License">
          <rat:text text="exampl"/>
        </rat:license>
      </rat:report>
    </au:expectfailure>
  </target>

  <target name="testRegexLicenseRequiresPattern">
    <au:expectfailure
        expectedMessage="'regex' type matcher requires an expression">
      <rat:report>
        <file file="${ant.file}"/>
        <rat:family id='YASL1' name='Yet Another Software License (YASL) 1.0'/>
        <rat:license
            family="YASL1"
            notes="Interesting License">
            <rat:regex />
        </rat:license>
      </rat:report>
    </au:expectfailure>
  </target>

  <target name="testTextLicenseRequiresText">
    <au:expectfailure
        expectedMessage="text value is required">
      <rat:report>
        <file file="${ant.file}"/>
        <rat:family id='YASL1' name='Yet Another Software License (YASL) 1.0'/>
        <rat:license
            family="YASL1"
            notes="Interesting License">
        	<rat:text/>
        </rat:license>
      </rat:report>
    </au:expectfailure>
  </target>
</project>
